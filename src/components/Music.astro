---
import { getI18N } from "../i18n/index";
import ListMusic from "./ListMusic.astro";
import Typography from "./Typography.astro";
import Container from "./Container.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  id="music"
  class="relative h-auto py-24 z-10 mx-auto flex justify-center mb-10 text-pretty px-6 text-left text-xl"
>
  <Container>
    <Typography variant="bigger" color="neutral" as="h1" class="">
      {i18n.MUSIC_TITLE}
    </Typography>
    <ListMusic />
    <div
      class="px-5 mt-16 xs:px-3 lg:px-5 xl:px-10 flex items-center justify-center"
    >
      <iframe
        class="max-w-[600px]"
        style="border-radius:12px"
        src="https://open.spotify.com/embed/artist/3dBVADVw0S1wdv0PKbDaMT?utm_source=generator"
        width="100%"
        height="352"
        frameborder="0"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>
  </Container>
</section>
